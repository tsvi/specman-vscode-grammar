{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate language file",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "command": "./build.py"
    },
    {
      "label": "Update local extenstion",
      "group": "build",
      "type": "shell",
      "command": "vsce package -o specman-dev.vsix; code --install-extension specman-dev.vsix "
    },
    {
      "label": "Run tests",
      "type": "shell",
      "command": "vscode-tmgrammar-test -c 'tests/test*.e'",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": {
        "owner": "vscode-tmgrammar-test",
        "fileLocation": "autoDetect",
        "pattern": [
          {
            "regexp": "^(ERROR)\\s([^:]+):(\\d+):(\\d+):(\\d+)\\s(.*)$",
            "severity": 1,
            "file": 2,
            "line": 3,
            "column": 4,
            "endColumn": 5,
            "message": 6
          }
        ]
      }
    }
  ]
}
