{
    "name": "specman",
    "displayName": "Specman Syntax Highlighter",
    "description": "Syntax highlighting for Specman (e) verification language",
    "version": "0.2.12-beta.1",
    "publisher": "TsviMostovicz",
    "extensionKind": [
        "workspace",
        "ui"
    ],
    "license": "SEE LICENSE IN LICENSE",
    "engines": {
        "vscode": "^1.13.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "specman",
                "aliases": [
                    "Specman",
                    "Specman (e)",
                    "specman"
                ],
                "extensions": [
                    ".e"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "specman",
                "scopeName": "source.specman",
                "path": "./syntaxes/specman.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "build": "./build.py",
        "build:validate": "./build.py --validate",
        "test": "vscode-tmgrammar-test -c 'tests/test*.e'",
        "package": "./build.py && vsce package",
        "release": "./scripts/bump-version.sh"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tsvi/specman-vscode-grammar.git"
    },
    "devDependencies": {
        "vscode-tmgrammar-test": "^0.1.3"
    }
}
