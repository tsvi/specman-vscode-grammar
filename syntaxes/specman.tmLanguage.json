        {
          "match": "\\b(0(?:[bB])\\s*[0-1_xXzZ?]+)\\b",
          "captures": {
            "1": {"name": "constant.numeric.unsized.binary.specman"}
          }
        },
        {
          "match": "\\b(0(?:[xX])\\s*[0-9a-fA-F_xXzZ?]+)\\b",
          "captures": {
            "1": {"name": "constant.numeric.unsized.hex.specman"}
          }
        },
        {
          "match": "\\b(0(?:[oO])\\s*[0-9a-fA-F_xXzZ?]+)\\b",
          "captures": {
